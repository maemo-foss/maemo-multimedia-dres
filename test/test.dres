# -*- makefile -*-

PREFIX = dres.test

$fact1 = { name: fact1, value: 1 }
$fact2 = { name: fact2, value: 2 }
$fact3 = { name: fact3, value: 3 }
$fact4 = { name: fact4, value: 4 }

all: test1 test2 test3 test4

test1: 
	echo(test1, start)
	$fact1 = fact(fact1, value, 1, foo, bar)
	echo(test1, end)

test2: 
	echo(test2, start)
	$fact2 = fact(fact2, value, 2, bar, foo)
	echo(test2, end)

test3: 
	echo(test3, start)
	$fact3 = fact(fact3, value, 3, foobar, barfoo)
	echo(test3, end)

test4: 
	echo(test4, start)
	$fact4 = fact(fact4, value, 5, barfoo, foobar)
	fail(foo)
	echo(test4, end)

# rules for updating facts
touch1:
	touch(fact1)

touch2:
	touch(fact2)

touch3:
	touch(fact3)

touch4:
	touch(fact4)

